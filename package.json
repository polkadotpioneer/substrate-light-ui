{
  "name": "@substrate/light-ui",
  "version": "0.2.0",
  "author": "Parity Technologies <admin@parity.io>",
  "description": "User interface optimized for the Substrate light client",
  "license": "Apache-2.0",
  "private": true,
  "repository": "https://github.com/paritytech/substrate-light-ui.git",
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/electron-builder",
      "**/electron-builder/**",
      "**/electron-webpack",
      "**/electron-webpack/**",
      "**/jest",
      "**/webpack",
      "**/webpack-dev-server"
    ]
  },
  "scripts": {
    "build": "lerna exec yarn build --stream",
    "clean": "polkadot-dev-clean-build",
    "electron": "cd packages/electron-app && yarn electron",
    "fetch-substrate": "cd ./scripts && node fetchLatestSubstrate.js",
    "lint": "eslint --cache --ext .js,.jsx,.ts,.tsx . && tsc --noEmit --pretty",
    "package": "cd packages/electron-app && yarn package",
    "prebuild": "yarn clean",
    "preelectron": "yarn build",
    "prepackage": "yarn build",
    "prestart": "./scripts/prestart.sh",
    "start": "lerna exec yarn start --parallel",
    "storybook": "cd packages/ui-components && yarn storybook",
    "storybook-build": "cd packages/ui-components && yarn build-storybook",
    "test": "CI=true lerna run test --parallel"
  },
  "devDependencies": {
    "@polkadot/dev": "^0.30.0-beta.22",
    "@polkadot/dev-react": "^0.30.0-beta.22",
    "ncp": "^2.0.0",
    "node-fetch": "^2.5.0",
    "semver": "^6.0.0"
  },
  "resolutions": {
    "@polkadot/api": "^0.82.0-beta.25",
    "@polkadot/api-contract": "^0.82.0-beta.25",
    "@polkadot/keyring": "^0.94.0-beta.4",
    "@polkadot/types": "^0.82.0-beta.25",
    "@polkadot/util": "^0.94.0-beta.4",
    "@polkadot/util-crypto": "^0.94.0-beta.4",
    "@types/styled-components": "4.1.3",
    "babel-core": "^7.0.0-bridge.0",
    "typescript": "^3.5.2"
  }
}
